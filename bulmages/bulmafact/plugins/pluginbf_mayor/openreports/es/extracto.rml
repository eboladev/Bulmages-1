		<blockAlignment value="LEFT" start="0,0" stop="-1,-1" />	
		<blockAlignment value="RIGHT" start="2,0" stop="4,-1" />
		<blockFont name="Helvetica" size="10" start="2,0" stop="4,-1"/>
		<blockValign value="TOP" />
